#include "holberton.h"
/**
 * *_memset - fills memory with a constant byte
 * @s: pointed memory area to fill
 * @b: constant byte
 * @n: bytes to fill in *s
 * Return: pointer to the memory area s
 */
char *_memset(char *s, char b, unsigned int n)
{
	unsigned int i = 0;

	while (i < n)
	  {
	    *(s + i) = b;
	    i++;
	  }
	return (s);
}
